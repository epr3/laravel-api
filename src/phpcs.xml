<?xml version="1.0"?>

<ruleset name="PSR2">

    <description>The PSR2 coding standard.</description>

    <rule ref="PSR2">
        <exclude name="PSR2.Namespaces.UseDeclaration.MultipleDeclarations"/>
    </rule>

    <file>app</file>
    <file>config</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <exclude-pattern>vendor</exclude-pattern>

</ruleset>
